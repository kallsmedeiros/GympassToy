<div class="page-header">
  <%= link_to gyms_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_gym_path(@gym), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show gym</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @gym.name %></dd>

  <dt>Location:</dt>
  <dd><%= @gym.location.try(:address) %></dd>

  <dt>Manager:</dt>
  <dd><%= @gym.manager.try(:name) %></dd>

  <dt>Opening:</dt>
  <dd><%= @gym.opening.strftime("%H:%M") %></dd>

  <dt>Closing:</dt>
  <dd><%= @gym.closing.strftime("%H:%M") %></dd>
</dl>
