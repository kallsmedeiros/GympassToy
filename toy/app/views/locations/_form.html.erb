<%= form_for(@location, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @location.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h4>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.text_field :address, class: "form-control", id: 'txtautocomplete' %>
      <input id="txtautocomplete" class="form-control" name="location[address]" type="text">
    </div>
  </div>
  <div class="form-group">
    <%= f.label :latitude, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :latitude, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :longitude, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :longitude, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?v=3.exp&signedin=true&libraries=places&sensor=false&key=AIzaSyCxRjjdMVyTPuNxeNeDIWSKl7bjLCBfDHM"></script>
<script type="text/javascript">

    google.maps.event.addDomListener(window, 'load', intilize);
    function intilize() {
    var autocomplete = new google.maps.places.Autocomplete(document.getElementById('txtautocomplete'));

    google.maps.event.addListener(autocomplete)}
</script>
